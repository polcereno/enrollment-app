<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".signup_fragments.SignupDocumentsFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/marginTertiary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:clickable="true"
        android:focusableInTouchMode="true"
        android:focusable="true">
        <requestFocus/>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginVertical="@dimen/marginTertiary">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:orientation="vertical"
                android:padding="@dimen/marginTertiary">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/canonical"
                    android:textSize="@dimen/textH4"
                    android:textStyle="bold"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/baptismal"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/textFieldHeight"
                    android:text="@string/baptismal"
                    android:textSize="@dimen/textNormal"
                    android:textColor="@android:color/tertiary_text_light"
                    android:padding="13dp"
                    android:background="@drawable/edit_text_background"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_marginTop="@dimen/marginSecondary"
                    android:drawableEnd="@drawable/baseline_upload_24"
                    android:drawableTint="@android:color/tertiary_text_light"
                    android:onClick="openFileChooser"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/confirmation_cert"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/textFieldHeight"
                    android:text="@string/confirmation_cert"
                    android:textSize="@dimen/textNormal"
                    android:textColor="@android:color/tertiary_text_light"
                    android:padding="13dp"
                    android:background="@drawable/edit_text_background"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_marginTop="@dimen/marginSecondary"
                    android:drawableEnd="@drawable/baseline_upload_24"
                    android:drawableTint="@android:color/tertiary_text_light"
                    android:onClick="openFileChooser"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/civil"
                    android:textSize="@dimen/textH4"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/marginTertiary"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/birth_cert"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/textFieldHeight"
                    android:text="@string/birth_cert"
                    android:textSize="@dimen/textNormal"
                    android:textColor="@android:color/tertiary_text_light"
                    android:padding="13dp"
                    android:background="@drawable/edit_text_background"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_marginTop="@dimen/marginSecondary"
                    android:drawableEnd="@drawable/baseline_upload_24"
                    android:drawableTint="@android:color/tertiary_text_light"
                    android:onClick="openFileChooser"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/marriage_cert"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/textFieldHeight"
                    android:text="@string/marriage"
                    android:textSize="@dimen/textNormal"
                    android:textColor="@android:color/tertiary_text_light"
                    android:padding="13dp"
                    android:background="@drawable/edit_text_background"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_marginTop="@dimen/marginSecondary"
                    android:drawableEnd="@drawable/baseline_upload_24"
                    android:drawableTint="@android:color/tertiary_text_light"
                    android:onClick="openFileChooser"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/brgy_residence"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/textFieldHeight"
                    android:text="@string/brgy_residence"
                    android:textSize="@dimen/textNormal"
                    android:textColor="@android:color/tertiary_text_light"
                    android:padding="13dp"
                    android:background="@drawable/edit_text_background"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_marginTop="@dimen/marginSecondary"
                    android:drawableEnd="@drawable/baseline_upload_24"
                    android:drawableTint="@android:color/tertiary_text_light"
                    android:onClick="openFileChooser"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/indigency"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/textFieldHeight"
                    android:text="@string/indigency"
                    android:textSize="@dimen/textNormal"
                    android:textColor="@android:color/tertiary_text_light"
                    android:padding="13dp"
                    android:background="@drawable/edit_text_background"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_marginTop="@dimen/marginSecondary"
                    android:drawableEnd="@drawable/baseline_upload_24"
                    android:drawableTint="@android:color/tertiary_text_light"
                    android:onClick="openFileChooser"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/bir"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/textFieldHeight"
                    android:text="@string/bir"
                    android:textSize="@dimen/textNormal"
                    android:textColor="@android:color/tertiary_text_light"
                    android:padding="13dp"
                    android:background="@drawable/edit_text_background"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_marginTop="@dimen/marginSecondary"
                    android:drawableEnd="@drawable/baseline_upload_24"
                    android:drawableTint="@android:color/tertiary_text_light"
                    android:onClick="openFileChooser"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/other_documents"
                    android:textSize="@dimen/textH4"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/marginTertiary"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/recommendation_letter"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/textFieldHeight"
                    android:text="@string/recommendation_letter"
                    android:textSize="@dimen/textNormal"
                    android:textColor="@android:color/tertiary_text_light"
                    android:padding="13dp"
                    android:background="@drawable/edit_text_background"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_marginTop="@dimen/marginSecondary"
                    android:drawableEnd="@drawable/baseline_upload_24"
                    android:drawableTint="@android:color/tertiary_text_light"
                    android:onClick="openFileChooser"
                    />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/parish_input"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/marginSecondary"
                    android:textColorHint="@android:color/tertiary_text_light"
                    app:boxCornerRadiusBottomEnd="@dimen/radiusTertiary"
                    app:boxCornerRadiusBottomStart="@dimen/radiusTertiary"
                    app:boxCornerRadiusTopEnd="@dimen/radiusTertiary"
                    app:boxCornerRadiusTopStart="@dimen/radiusTertiary"
                    app:boxStrokeColor="@color/primary"
                    app:boxStrokeWidth="@dimen/strokePrimary"
                    app:hintTextColor="@color/primary">
                    <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                        android:id="@+id/parish"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/textFieldHeight"
                        android:imeOptions="actionNext"
                        android:hint="@string/parish"
                        android:completionThreshold="1"
                        android:inputType="text"
                        android:textColor="@android:color/secondary_text_light"
                        android:textColorHint="@android:color/tertiary_text_light"
                        android:textCursorDrawable="@null"
                        android:textSize="@dimen/textNormal" />
                </com.google.android.material.textfield.TextInputLayout>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/medical_cert"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/textFieldHeight"
                    android:text="@string/medical_cert"
                    android:textSize="@dimen/textNormal"
                    android:textColor="@android:color/tertiary_text_light"
                    android:padding="13dp"
                    android:background="@drawable/edit_text_background"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_marginTop="@dimen/marginSecondary"
                    android:drawableEnd="@drawable/baseline_upload_24"
                    android:drawableTint="@android:color/tertiary_text_light"
                    android:onClick="openFileChooser"
                    />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/marginTertiary"
                android:layout_gravity="bottom|end">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/back_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/backBtn"
                    android:textColor="@color/purple_button"
                    android:textAllCaps="false"
                    android:layout_margin="@dimen/marginTertiary"
                    android:onClick="onBackButtonClick"
                    android:background="@drawable/back_button"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/continue_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/continueBtn"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:layout_margin="@dimen/marginTertiary"
                    android:onClick="onNextButtonClick"
                    android:background="@drawable/next_button"/>
            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.core.widget.NestedScrollView>

</FrameLayout>