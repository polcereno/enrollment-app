                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="@dimen/marginPrimary" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/marginPrimary"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:text="@string/level"
                        android:textSize="@dimen/textNormal"
                        android:textStyle="bold" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/levelLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="@android:color/tertiary_text_light"
                        app:boxCornerRadiusBottomEnd="@dimen/radiusTertiary"
                        app:boxCornerRadiusBottomStart="@dimen/radiusTertiary"
                        app:boxCornerRadiusTopEnd="@dimen/radiusTertiary"
                        app:boxCornerRadiusTopStart="@dimen/radiusTertiary"
                        app:boxStrokeColor="@color/primary"
                        app:boxStrokeWidth="@dimen/strokePrimary"
                        app:hintTextColor="@color/primary">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/level"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="8dp"
                            android:inputType="text"
                            android:textColor="@android:color/secondary_text_light"
                            android:textColorHint="@android:color/tertiary_text_light"
                            android:textCursorDrawable="@null"
                            android:textSize="@dimen/textNormal" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/marginPrimary"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:text="@string/curriculum"
                        android:textSize="@dimen/textNormal"
                        android:textStyle="bold" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/curriculumLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="@android:color/tertiary_text_light"
                        app:boxCornerRadiusBottomEnd="@dimen/radiusTertiary"
                        app:boxCornerRadiusBottomStart="@dimen/radiusTertiary"
                        app:boxCornerRadiusTopEnd="@dimen/radiusTertiary"
                        app:boxCornerRadiusTopStart="@dimen/radiusTertiary"
                        app:boxStrokeColor="@color/primary"
                        app:boxStrokeWidth="@dimen/strokePrimary"
                        app:hintTextColor="@color/primary">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/curriculum"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="8dp"
                            android:inputType="text"
                            android:textColor="@android:color/secondary_text_light"
                            android:textColorHint="@android:color/tertiary_text_light"
                            android:textCursorDrawable="@null"
                            android:textSize="@dimen/textNormal" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/marginPrimary"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:text="@string/entry_period"
                        android:textSize="@dimen/textNormal"
                        android:textStyle="bold" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/entryPeriodLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="@android:color/tertiary_text_light"
                        app:boxCornerRadiusBottomEnd="@dimen/radiusTertiary"
                        app:boxCornerRadiusBottomStart="@dimen/radiusTertiary"
                        app:boxCornerRadiusTopEnd="@dimen/radiusTertiary"
                        app:boxCornerRadiusTopStart="@dimen/radiusTertiary"
                        app:boxStrokeColor="@color/primary"
                        app:boxStrokeWidth="@dimen/strokePrimary"
                        app:hintTextColor="@color/primary">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/entryPeriod"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="8dp"
                            android:inputType="text"
                            android:textColor="@android:color/secondary_text_light"
                            android:textColorHint="@android:color/tertiary_text_light"
                            android:textCursorDrawable="@null"
                            android:textSize="@dimen/textNormal" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/marginPrimary"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:text="@string/entry_date"
                        android:textSize="@dimen/textNormal"
                        android:textStyle="bold" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/entryDateLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="@android:color/tertiary_text_light"
                        app:boxCornerRadiusBottomEnd="@dimen/radiusTertiary"
                        app:boxCornerRadiusBottomStart="@dimen/radiusTertiary"
                        app:boxCornerRadiusTopEnd="@dimen/radiusTertiary"
                        app:boxCornerRadiusTopStart="@dimen/radiusTertiary"
                        app:boxStrokeColor="@color/primary"
                        app:boxStrokeWidth="@dimen/strokePrimary"
                        app:hintTextColor="@color/primary">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/entryDate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="8dp"
                            android:inputType="text"
                            android:textColor="@android:color/secondary_text_light"
                            android:textColorHint="@android:color/tertiary_text_light"
                            android:textCursorDrawable="@null"
                            android:textSize="@dimen/textNormal" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/marginTertiary"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:text="@string/lrn2"
                        android:textSize="@dimen/textNormal"
                        android:textStyle="bold" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/lrnLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="@android:color/tertiary_text_light"
                        app:boxCornerRadiusBottomEnd="@dimen/radiusTertiary"
                        app:boxCornerRadiusBottomStart="@dimen/radiusTertiary"
                        app:boxCornerRadiusTopEnd="@dimen/radiusTertiary"
                        app:boxCornerRadiusTopStart="@dimen/radiusTertiary"
                        app:boxStrokeColor="@color/primary"
                        app:boxStrokeWidth="@dimen/strokePrimary"
                        app:hintTextColor="@color/primary">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/lrn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="8dp"
                            android:inputType="text"
                            android:textColor="@android:color/secondary_text_light"
                            android:textColorHint="@android:color/tertiary_text_light"
                            android:textCursorDrawable="@null"
                            android:textSize="@dimen/textNormal" />
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|end"
                    android:layout_marginBottom="50dp">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/saveButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/save"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:layout_margin="@dimen/marginTertiary"
                        android:enabled="false"
                        android:background="@drawable/next_button"/>

                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.core.widget.NestedScrollView>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>